extends layout
block content
    h1= title  
    - let flightid = toShow.id
    - let flightModel = toShow.Model
    - let flightcapacity = toShow.capacity
    - let flightcost = toShow.cost
    - let flightrange = toShow.range
    div.row(class='mb-2')
    div.mr-1 ID is
    div #{flightid}
    - let actionid = "/resource/flights/" + flightid
    form(id='flightForm', action= actionid, method="PUT")
    div.form-group
    label.flightAttr(for='Model') Flight Model
    input#Model(Model='text', name='Model', value= flightModel )
    div.form-group
    label.flightAttr(for='cost') Flight cost
    input#cost(Model='text', name='cost', value= flightcost )
    div.form-group
    label.flightAttr(for='capacity') Flight capacity
    input#capacity(Model='number', name='capacity', value= flightcapacity )
    div.form-group
    label.flightAttr(for='range') Flight range
    input#range(Model='text', name='range', value= flightrange )
    input(type="submit")
    
    script.
        document.forms['flightForm'].addEventListener('submit', (event) => {
         event.preventDefault();
        // TODO do something here to show user that form is being submitted
        fetch(event.target.action, {
            method: 'PUT',
            body: new URLSearchParams(new FormData(event.target)) // event.target is the form
            }).then((resp) => {
            return resp.json(); // or resp.text() or whatever the server sends
            }).then((body) => {
            alert("Update succeded")
            // TODO handle body
            }).catch((error) => {
            // TODO handle error
            alert("Update failed " + error )
            });
            });